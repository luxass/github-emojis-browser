---
import { isUnicodeUrl } from "github-emojis/utils";

export interface Props {
  emojiKey: string;
  emoji: string;
  emojiUrl?: string;
}

const { emojiKey, emoji, emojiUrl } = Astro.props;
---

<div class="flex flex-col items-center justify-between gap2 border border-base rounded p-2 shadow-sm bg-base">
  {
    emojiUrl && !isUnicodeUrl(emojiUrl) ? (
      <img src={emojiUrl} width={32} height={32} class="" alt={`GitHub Emoji for ${emojiKey}`} />
    ) : (
      <p class="text-3xl">{emoji}</p>
    )
  }
  <p>:{emojiKey}:</p>
</div>
